<?xml version="1.0"?>
<robot name="myfirst">

  <link name="body_link">
    <visual>
      <geometry>
        <box size="1.28 3.332 1.7"/>
      </geometry>
      <origin xyz="0 1.1 0.85"/>
    </visual>
  </link>

  <link name="front_wheel">
    <visual>
      <geometry>
        <cylinder length="0.35" radius="0.25"/>
      </geometry>
    </visual>
  </link>

  <link name="steering_point"/>


  <link name="back_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.35" radius="0.25"/>
      </geometry>
      <origin xyz="0 0 0.175"/>
    </visual>
  </link>

  <link name="back_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.35" radius="0.25"/>
      </geometry>
    <origin xyz="0 0 -0.175"/>
    </visual>
  </link>

  <joint name="body_to_steering_point" type="continuous">
    <parent link="body_link"/>
    <child link="steering_point"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0 2.2 0" rpy="0 -1.57075 0"/>
  </joint>

  <joint name="steering_point_to_front_wheel" type="continuous">
    <parent link="steering_point"/>
    <child link="front_wheel"/>
    <axis xyz="0 0 1"/>
  </joint>


  <joint name="body_to_back_left_wheel" type="continuous">
    <parent link="body_link"/>
    <child link="back_left_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="-0.64 0 0" rpy="0 -1.57075 0"/>
  </joint>

  <joint name="body_to_back_right_wheel" type="continuous">
    <parent link="body_link"/>
    <child link="back_right_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0.64 0 0" rpy="0 -1.57075 0"/>
  </joint>

</robot>

<?xml version="1.0"?>
<robot name="autonomous_car">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="body_link">
    <visual>
      <geometry>
        <box size="3.332 1.28 1.7"/>
      </geometry>
      <origin xyz="1.1 0 0.85"/>
      <material name="white"/>
    </visual>
  </link>

  <link name="front_wheel">
    <visual>
      <geometry>
        <cylinder length="0.35" radius="0.25"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0 1.0"/>
      </material>
    </visual>
  </link>

  <link name="steering_point"/>


  <link name="back_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.35" radius="0.25"/>
      </geometry>
      <origin xyz="0 0 0.175"/>
      <material name="blue"/>
    </visual>
  </link>

  <link name="back_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.35" radius="0.25"/>
      </geometry>
      <origin xyz="0 0 -0.175"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="body_to_steering_point" type="continuous">
    <parent link="body_link"/>
    <child link="steering_point"/>
    <axis xyz="0 0 1"/>
    <origin xyz="2.2 0 0"/>
  </joint>

  <joint name="steering_point_to_front_wheel" type="continuous">
    <parent link="steering_point"/>
    <child link="front_wheel"/>
    <axis xyz="0 0 1"/>
    <origin rpy="-1.57075 0 0"/>
  </joint>


  <joint name="body_to_back_left_wheel" type="continuous">
    <parent link="body_link"/>
    <child link="back_left_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 -0.64 0" rpy="-1.57075 0 0"/>
  </joint>

  <joint name="body_to_back_right_wheel" type="continuous">
    <parent link="body_link"/>
    <child link="back_right_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0.64 0" rpy="-1.57075 0 0"/>
  </joint>

</robot>
